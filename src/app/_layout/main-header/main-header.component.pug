.main-header-container
  .main-header-wrapper
    .main-header-language.language {{ "HEADER.LANGUAGE_CHOOSE" | translate }}:
      mat-select(panelClass="languageSwitch", [(ngModel)]="chosenLanguage", [ngClass]="chosenLanguage",  (change)="changeLanguage($event.value)").chosen-language
        mat-option(*ngFor='let language of languagesList', [ngClass]="language", [value]="language") {{language}}
    .main-header-logo Carry Fest
    .main-header-profile
      .not-logged(*ngIf="!userData")
        .sign-in([routerLink]="['/startup/sign-in']") {{ "HEADER.SIGN_IN" | translate}} |
        .sign-up([routerLink]="['/startup/sign-up']") {{ "HEADER.SIGN_UP" | translate}}
      .logged-user(*ngIf="userData")
        .user-name
        img([src]="userData['imageSrc'] ").user-image
        .sign-up((click)="authService.logOut()", [routerLink]="['/startup/sign-in']") | {{ "HEADER.LOG_OUT" | translate}}

