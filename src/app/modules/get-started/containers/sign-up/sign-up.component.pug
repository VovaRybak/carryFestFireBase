.container
  .filling-info
     .back-line
       .green-line
     .steps
       .step(*ngFor='let stepNumber of [1,2,3]', [ngClass]="{'active': stepNumber <= currentStep}") {{stepNumber}}
  form.wrapper([formGroup]='signUpForm')
    .first-step.step(*ngIf='currentStep === 1')
      .sign-up-header
        | {{ "GET_STARTED.REGISTRATION" | translate }}
      .sign-up-step-form
        .first-step-logo Welcome to
          .first-step-logo--icon CarryFest
        mat-form-field.sign-in-form--field
          input(matInput, [placeholder]="'GET_STARTED.EMAIL' | translate", type="email", spellcheck="false", formControlName="email" )
        mat-form-field.sign-in-form--field
          input(matInput, [placeholder]="'GET_STARTED.PASSWORD' | translate", type="password", spellcheck="false", formControlName="password" )
      .button-section
        button.sign-up-form--button.next((click)="setStep(true)") {{"GET_STARTED.NEXT" | translate}}
    .second-step.step(*ngIf='currentStep === 2')
      .sign-up-header
        | {{ "GET_STARTED.TELL_ABOUT_YOURSELF" | translate }}
      .sign-up-step-form
        carryFest-image-upload((uploadImage)="getImage($event)")
        mat-form-field.sign-in-form--field
          input(matInput, [placeholder]="'GET_STARTED.FIRST_NAME' | translate", type="text", spellcheck="false", formControlName="firstName" )
        mat-form-field.sign-in-form--field
          input(matInput, [placeholder]="'GET_STARTED.LAST_NAME' | translate", type="text", spellcheck="false", formControlName="lastName" )
      .button-section
        button.sign-up-form--button.back((click)="setStep(false)") {{"GET_STARTED.BACK" | translate}}
        button.sign-up-form--button.next((click)="setStep(true)") {{"GET_STARTED.NEXT" | translate}}
    .third-step.step(*ngIf='currentStep === 3')
      .sign-up-header
        | {{ "GET_STARTED.WHAT_DO_YOU_DO" | translate }}
      .sign-up-step-form
        mat-form-field.sign-in-form--field
          input(ngx-google-places-autocomplete, matInput, formControlName="serviceLocation", [placeholder]="'GET_STARTED.SERVICE_LOCATION' | translate", [options]='{ language:"ua" ,componentRestrictions: {country: "ua"}}', #placesRef="ngx-places",  (onAddressChange)="handleAddressChange($event)")
        mat-form-field.sign-in-form--field
          textarea(matInput, formControlName="serviceName", [placeholder]="'GET_STARTED.SERVICE_NAME' | translate", mat-autosize="true" )
        mat-form-field.sign-in-form--field
          input(matInput,formControlName="serviceType", [placeholder]="'GET_STARTED.SERVICE_TYPE' | translate")
        mat-form-field.sign-in-form--field
          textarea(matInput, [placeholder]="'GET_STARTED.SERVICE_DESCRIPTION' | translate", mat-autosize="true" )
      .button-section
        button.sign-up-form--button.back((click)="setStep(false)") {{"GET_STARTED.BACK" | translate}}
        button.sign-up-form--button.next((click)="sendUserData()") {{"GET_STARTED.SEND" | translate}}
